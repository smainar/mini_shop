<%= form_tag("/merchants/#{@merchant.id}", method: :patch) do  %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @merchant.name, class: "new-input" %><br>

  <%= label_tag :address %>
  <%= text_field_tag :address, @merchant.address, class: "new-input" %><br>

  <%= label_tag :city %>
  <%= text_field_tag :city, @merchant.city, class: "new-input" %><br>

  <%= label_tag :state %>
  <%= text_field_tag :state, @merchant.state, class: "new-input" %><br>

  <%= label_tag :zip %>
  <%= text_field_tag :zip, @merchant.zip, class: "new-input"%><br>

  <%= submit_tag "Submit Update", class: "button" %><br>
<% end %>
