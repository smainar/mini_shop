<%= form_tag("/items/#{@item.id}", method: :patch) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @item.name, class: "new-input" %><br>

  <%= label_tag :price %>
  <%= number_field_tag :price, @item.price, class: "new-input" %><br>

  <%= label_tag :description %>
  <%= text_area_tag :description, @item.description, class: "new-input" %><br>

  <%= label_tag :inventory %>
  <%= number_field_tag :inventory, @item.inventory, class: "new-input" %><br>

  <%= label_tag :image %>
  <%= text_field_tag :image, @item.image, class: "new-input" %><br>

  <%= submit_tag "Submit", class: "button" %>
<% end %>
