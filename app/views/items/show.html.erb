<section id="item-id-<%= @item.id %>">
  <h1>Name: <%= @item.name %></h1>
  <h3>Price: <%= @item.price %></h3>
  <h3>Description: <%= @item.description %></h3>
  <h3>Inventory: <%= @item.inventory %></h3>
  <h3>Active: <%= @item.active %></h3>
  <h3>Merchant: <%= @item.merchant.name %></h3>
  <%= image_tag @item.image, alt: "image of @item.name" %>
</section>
